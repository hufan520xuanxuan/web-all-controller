.widget-container.fluid-height(ng-controller='FuncSwitchCtrl')
  div(ng-if='account.account')
    .heading
      stacked-icon(icon='fa-list', color='color-darkgray')
      span 功能开关
      .pull-right
    .widget-content.padded
      span.padded 关注
      input(bs-switch, type='checkbox', switch-size='mini', switch-on-text='{{switchOnText}}', switch-off-text='{{switchOffText}}', ng-model='account.config.follow.status' ng-true-value="1", ng-false-value="0", ng-change="switchChange('follow')")
      span.padded 取关
      input(bs-switch, type='checkbox', switch-size='mini', switch-on-text='{{switchOnText}}', switch-off-text='{{switchOffText}}', ng-model='account.config.unfollow.status' ng-true-value="1", ng-false-value="0", ng-change="switchChange('unfollow')")
      span.padded 点赞
      input(bs-switch, type='checkbox', switch-size='mini', switch-on-text='{{switchOnText}}', switch-off-text='{{switchOffText}}', ng-model='account.config.thumb.status' ng-true-value="1", ng-false-value="0", ng-change="switchChange('thumb')")
      span.padded 评论
      input(bs-switch, type='checkbox', switch-size='mini', switch-on-text='{{switchOnText}}', switch-off-text='{{switchOffText}}', ng-model='account.config.comment.status' ng-true-value="1", ng-false-value="0", ng-change="switchChange('comment')")
      span.padded 私信
      input(bs-switch, type='checkbox', switch-size='mini', switch-on-text='{{switchOnText}}', switch-off-text='{{switchOffText}}', ng-model='account.config.message.status' ng-true-value="1", ng-false-value="0", ng-change="switchChange('message')")
      span.padded 发帖
      input(bs-switch, type='checkbox', switch-size='mini', switch-on-text='{{switchOnText}}', switch-off-text='{{switchOffText}}', ng-model='account.config.post.status' ng-true-value="1", ng-false-value="0", ng-change="switchChange('post')")
      span.padded 热身
      input(bs-switch, type='checkbox', switch-size='mini', switch-on-text='{{switchOnText}}', switch-off-text='{{switchOffText}}', ng-model='account.config.browse.status' ng-true-value="1", ng-false-value="0", ng-change="switchChange('browse')")


