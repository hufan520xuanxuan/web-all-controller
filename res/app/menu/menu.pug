//首页 上面一条功能栏布局
.navbar.stf-menu(ng-controller='MenuCtrl')
  .container-fluid.stf-top-bar
    a.stf-logo(ng-href="/#!/devices") STF
    ul.nav.stf-nav(nav-menu='current').unselectable
      li(ng-cloak)
        a(ng-href='/#!/control/{{lastUsedDevice}}', ng-show='lastUsedDevice')
          span.fa.fa-mobile
          span(ng-if='!$root.basicMode', translate) 设备
        a(ng-href='/#!/devices', accesskey='1')
          span.fa.fa-sitemap
          span(ng-if='!$root.basicMode', translate) 列表
        //a(ng-href='/#!/cloud-control', target='_blank')
        //  span.fa.fa-cloud
        //  span(ng-if='!$root.basicMode', translate) 云控
        a(ng-href='/#!/total-control', target='_blank')
          span.fa.fa-group
          span(ng-if='!$root.basicMode', translate) 大屏群控
        a(ng-href='/#!/page-total-control', target='_blank')
          span.fa.fa-pagelines
          span(ng-if='!$root.basicMode', translate) 分页群控
        a(ng-href='/#!/func')
          span.fa.fa-list
          span(ng-if='!$root.basicMode', translate) 功能
        a(ng-href='/#!/log')
          span.fa.fa-book
          span(ng-if='!$root.basicMode', translate) 日志
        a(ng-href='/#!/settings')
          span.fa.fa-gear
          span(ng-if='!$root.basicMode', translate) 设置

    .logout.pull-right(ng-click='logout()') 退出登录
    ul.nav.stf-nav.stf-feedback.pull-right(ng-cloak, nav-menu='current').unselectable
      li.stf-nav-web-native-button(ng-if='!$root.basicMode && isControlRoute')
        .btn-group
          button(type='button', ng-model='$root.platform', uib-btn-radio="'web'", translate).btn.btn-sm.btn-default-outline Web
          button(type='button', ng-model='$root.platform', uib-btn-radio="'native'", translate).btn.btn-sm.btn-default-outline Native
