.col-md-12
  .widget-container.fluid-height
    .widget-content.padded
      form
        .form-group
          label 开启状态
          input(bs-switch, type='checkbox', switch-size='small', switch-on-text='开启',
          switch-off-text='关闭', ng-model='insAccount.config.post.status', ng-true-value="1",
          ng-false-value="0", ng-change="switchChange()", ng-if='status')

        .form-group
          .imgs
            .img(ng-repeat='(index, img) in post.imgList')
              img(src='{{img}}')
              .remove(ng-click='removeImg(index)')
                i.fa.fa-close
            .upload
              input.file(type='file', accept='image/*', ng-model='file', multiple, onchange='angular.element(this).scope().uploadImg(angular.element(this))')
              i.fa.fa-upload
        .form-group.form-inline
          textarea.form-control(ng-model='post.res')
        .form-group.form-inline
          label 设置时间
          input.form-control.post-time-picker(ng-model='post.postTime', datetimepicker, datetimepicker-options='{format: "YYYY-MM-DD HH:mm:ss"}')
        .form-group.form-inline
          label 发帖模式
          .radio-inline
            label
              input(type='radio', name='type', value='1', ng-model='post.type')
              span 删除这些文件
          .radio-inline
            label
              input(type='radio', name='type', value='2', ng-model='post.type')
              span 标记为已使用
        .form-group.form-inline
          label 范围
          input.form-control(type='number', ng-model='post.start')
          span -
          input.form-control(type='number', ng-model='post.end')

  .save
          button.btn.btn-primary(ng-click='save()') 添加资源
