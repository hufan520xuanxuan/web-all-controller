// 功能 Ins 关注设置详情界面
.unselectable
  .col-md-12(ng-if='status')
    .widget-container.fluid-height.unfollowLayout
      .form-group
        label.topTxt 关注功能开关
        input(bs-switch, type='checkbox', switch-size='small', switch-on-text='开',switch-off-text='关',
          ng-model='insAccount.config.follow.status', ng-true-value="1",ng-false-value="0", ng-change="switchChange()")
      .form-group
        label.checkbox
          input(type='checkbox', ng-model='insAccount.config.follow.isTest')
          span 测试模式
      .form-group
        label.checkbox
          input(type='checkbox', ng-model='insAccount.config.follow.checkSsr')
          span 检查SSR
      .form-group
        label.checkbox
          input(type='checkbox', ng-model='insAccount.config.follow.checkV2')
          span 检查V2
      .form-group
        label.checkbox
          input(type='checkbox', ng-model='insAccount.config.follow.isLock')
          span 功能执行完锁屏
      .form-group
        label.checkbox-inline
          input(type='checkbox', ng-model='insAccount.config.follow.startInfo.status')
          span 设置分身名称:
          input.form-control.name-input(type='text', ng-model='insAccount.config.follow.startInfo.startName')
      .form-group
        input(type='checkbox', ng-model='insAccount.config.follow.testAdd.status')
        span.rightBtn 测试模式关注操作范围:
        input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.testAdd.minAdd')
        span.rightBtn 到
        input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.testAdd.maxAdd')
        span.rightBtn (单位:个) 关注操作
      .form-group
        input(type='checkbox', ng-model='insAccount.config.follow.swipeInfo.status')
        span.rightBtn 进到个人资料随机上下滑动幅度:
        input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.swipeInfo.minSwipe')
        span.rightBtn 到
        input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.swipeInfo.maxSwipe')
        span.rightBtn 单位:0.1-3.0之间 注:1.0表示滑动一页 3.0表示滑动三页
      .form-group
        span 每组操作间隔设置
        input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.minWait')
        span.rightBtn 到
        input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.maxWait')
        span.rightBtn 单位:秒
      .form-group
        span 每组关注人数设置
        input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.minPerson')
        span.rightBtn 到
        input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.maxPerson')
        span.rightBtn (单位:个) 对组的每个人操作间隔:
        span.rightBtn 关注操作间隔
        input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.minDelay')
        span.rightBtn 到
        input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.maxDelay')
        span.rightBtn 单位:秒
      .form-group
        span 当日关注上限设置
        input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.minDay')
        span.rightBtn 到
        input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.maxDay')
        span.rightBtn (单位:个)
        span.rightBtn 自动递增
        input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.addDay')
        span.rightBtn 递增上限
        input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.topDay')
        span.rightBtn 单位:个
      .form-group
        span 当日关注自增长上限后,按照:
        input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.fullMinDay')
        span.rightBtn 到
        input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.fullMaxDay')
        span.rightBtn 操作(单位:个)
      .form-group
        span 设置执行功能时间段:
        input.form-control.sort-input.time-start.rightBtn(ng-model='insAccount.config.follow.excute.start', datetimepicker, datetimepicker-options='{format: "HH:mm"}')
        span.rightBtn 到
        input.form-control.sort-input.time-end.rightBtn(ng-model='insAccount.config.follow.excute.end', datetimepicker, datetimepicker-options='{format: "HH:mm"}')
      .form-group
        span 设置操作日期:
        label.checkbox-inline.rightBtn(ng-repeat='(key, day) in weekday')
          input(type='checkbox', ng-model='selectedWeek[key]', name='weekday', ng-value='{{day.value}}')
          span {{day.title}}

      .form-group
        label.topTxt 关注筛选功能
        input(bs-switch, type='checkbox', switch-size='small', switch-on-text='开',switch-off-text='关',
          ng-model='insAccount.config.follow.filtStatus', ng-true-value="1")
      .form-group(ng-show='insAccount.config.follow.filtStatus')
        .form-group
          label.checkbox
            input(type='checkbox', ng-model='insAccount.config.follow.skipAddSecret')
            span 隐私用户撤销请求
        .form-group
          label.checkbox
            input(type='checkbox', ng-model='insAccount.config.follow.skipNoNear')
            span 跳过没有最近动态的用户
        .form-group
          label.checkbox
            input(type='checkbox', ng-model='insAccount.config.follow.skipSecretAccount')
            span 跳过私密用户
        .form-group
          label.checkbox
            input(type='checkbox', ng-model='insAccount.config.follow.skipFollowers')
            span 跳过已关注用户
        .form-group
          label.checkbox
            input(type='checkbox', ng-model='insAccount.config.follow.hasProfile')
            span 跳过没有个人简介的用户
        .form-group
          label.checkbox
            input(type='checkbox', ng-model='insAccount.config.follow.skipBussiness')
            span 跳过有商业标签的用户
        .form-group
          label.checkbox
            input(type='checkbox', ng-model='insAccount.config.follow.skipWebsite')
            span 跳过有网站资料的用户
        .form-group
          input(type='checkbox', ng-model='insAccount.config.follow.postStatus')
          label.rightBtn 用户发帖数筛选:
          input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.minPost')
          span.rightBtn 到
          input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.maxPost')
        .form-group
          input(type='checkbox', ng-model='insAccount.config.follow.followerStatus')
          span.rightBtn 用户粉丝数筛选:
          input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.minFollowers')
          span.rightBtn 到
          input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.maxFollowers')
        .form-group
          input(type='checkbox', ng-model='insAccount.config.follow.followingStatus')
          span.rightBtn 用户粉丝数筛选:
          input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.minFollowing')
          span.rightBtn 到
          input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.maxFollowing')
        .form-group
          input(type='checkbox', ng-model='insAccount.config.follow.postTimeStatus')
          span.rightBtn 最新帖子在
          input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.postTimeDay')
          span.rightBtn (单位:天) 以内
        .form-group
          input(type='checkbox', ng-model='insAccount.config.follow.postCommentStatus')
          span.rightBtn 帖子评论筛选
          input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.postCommentBefore')
          span.rightBtn 单位:条(最大值9条)
          span.rightBtn 评论数在
          input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.postCommentMinDay')
          span.rightBtn 到
          input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.postCommentMaxDay')
          span.rightBtn 单位:条
        .form-group
          label.checkbox
            input(type='checkbox', ng-model='insAccount.config.follow.followingWords.status')
            span 词汇黑名单过滤:
            textarea.form-control.textarea.bottomInput(ng-model='insAccount.config.follow.followingWords.words')
        .form-group
          span 对用户语言类型的筛选
            select.rightBtn(ng-model='insAccount.config.follow.language',
              ng-options='x.val as x.name for x in [{val:0,name:"不筛选"},{val:1,name:"中文"},{val:2,name:"英文"}, {val:3,name:"中文+英文"}]')

      .form-group
        label.topTxt 关注前操作
        input(bs-switch, type='checkbox', switch-size='small', switch-on-text='开',switch-off-text='关',
          ng-model='insAccount.config.follow.optBeforeInfo.optBeforeStatus', ng-true-value=true)
        .form-group(ng-show='insAccount.config.follow.optBeforeInfo.optBeforeStatus')
          .form-group
            input(type='checkbox', ng-model='insAccount.config.follow.optBeforeInfo.beforeViewStatus')
            input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.optBeforeInfo.beforeViewMin')
            span.rightBtn 到
            input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.optBeforeInfo.beforeViewMax')
            span.rightBtn (单位:个) 看最近动态操作
          .form-group
            input(type='checkbox', ng-model='insAccount.config.follow.optBeforeInfo.beforeThumbStatus')
            input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.optBeforeInfo.beforeThumbMin')
            span.rightBtn 到
            input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.optBeforeInfo.beforeThumbMax')
            span.rightBtn (单位:个) 在用户前
            input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.optBeforeInfo.beforeThumbTotal')
            span.rightBtn (最大值6)单位:条帖子中挑选
            input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.optBeforeInfo.beforeThumbChoice')
            span.rightBtn (单位:条)对帖子点赞操作
          .form-group
            input(type='checkbox', ng-model='insAccount.config.follow.optBeforeInfo.beforeCommentStatus')
            input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.optBeforeInfo.beforeCommentMin')
            span.rightBtn 到
            input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.optBeforeInfo.beforeCommentMax')
            span.rightBtn (单位:个) 对帖子
            input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.optBeforeInfo.beforeCommentTotal')
            span.rightBtn 单位:条(最大值6)
            input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.optBeforeInfo.beforeCommentChoice')
            span.rightBtn 对帖子评论操作
          .form-group
            label.checkbox
              span 评论话术设置
              textarea.form-control.textarea#command-text.bottomInput(ng-model='insAccount.config.follow.optBeforeInfo.beforeCommentTxt')
              button.btn.emoji-btn.bottomInput(ng-click='toggleEmoji()')
                span 选择表情
              emoji(value='insAccount.config.follow.optBeforeInfo.afterCommentTxt', el-key='command-text', visible='commandEmojiVisible', close='toggleEmoji()')

      .form-group
        label.topTxt 关注后操作
        input(bs-switch, type='checkbox', switch-size='small', switch-on-text='开',switch-off-text='关',
          ng-model='insAccount.config.follow.optAfterInfo.optAfterStatus', ng-true-value=true)
      .form-group(ng-show='insAccount.config.follow.optAfterInfo.optAfterStatus')
        .form-group
          input(type='checkbox', ng-model='insAccount.config.follow.optAfterInfo.afterMsgStatus')
          input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.optAfterInfo.afterMsgMin')
          span.rightBtn 到
          input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.optAfterInfo.afterMsgMax')
          span.rightBtn (单位:个) 对用户私信操作
        .form-group
          label.checkbox
            span 私信话术设置
            textarea.form-control.textarea#message-text.bottomInput(ng-model='insAccount.config.follow.optAfterInfo.afterMsgTxt')
            button.btn.emoji-btn.bottomInput(ng-click='toggleMessageEmoji()')
              span 选择表情
            emoji(value='insAccount.config.follow.optAfterInfo.afterMsgTxt', el-key='message-text', visible='messageEmojiVisible', close='toggleMessageEmoji()')
        .form-group
          input(type='checkbox', ng-model='insAccount.config.follow.optAfterInfo.afterFollowStatus')
          input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.optAfterInfo.afterFollowMin')
          span.rightBtn 到
          input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.optAfterInfo.afterFollowMin')
          span.rightBtn (单位:个) 对推荐用户操作
          span.rightBtn 随机关注
          input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.optAfterInfo.afterFollowMinNum')
          span.rightBtn 到
          input.form-control.sort-input.rightBtn(type='number', ng-model='insAccount.config.follow.optAfterInfo.afterFollowMaxNum')
          span.rightBtn (单位:个) 推荐用户数量


      button.btn.btn-primary(ng-click='save()') 保存当前配置
