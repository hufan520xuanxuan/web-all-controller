.total-control-toolbar
  //功能栏目
  uib-tabset.overflow-auto.fixHeight.tabs
    uib-tab(active='activeTabs.xt', select='focusSearch()')
      uib-tab-heading
        i.fa.fa-gear.fa-lg.color-brown
        span 系统工具
      label.xt
        .flex-content
          button.btn.btn-primary(type='file', ng-file-select='installPic($files)') 导入图片到手机
          button.btn.btn-primary(type='file', ng-file-select='installFile($files)') 安装程序到手机
          textarea.form-control.inline-block.textarea(ng-model='xt.shellName')
          button.btn.btn-primary(ng-click='startShell()') 批量执行shell(输入特定的shell执行)
          textarea.form-control.inline-block.textarea(ng-model='xt.contacts')
          button.btn.btn-primary(ng-click='addContacts()') 添加通讯录
          button.btn.btn-primary(ng-click='clearContacts()') 清空通讯录

    uib-tab(active='activeTabs.dy', select='focusSearch()')
      uib-tab-heading
        i.fa.fa-video-camera.fa-lg.color-blue
        span 抖音
      label 配置养号模式(版本号:10.5.0+):
        .flex-content
          span 浏览总数:
          input.form-control.sort-input(type='number', ng-model='dy.homeViewNum')
          span 随机点赞:
          input.form-control.sort-input(type='number', ng-model='dy.homeLikeNum')
          span 随机评论:
          input.form-control.sort-input(type='number', ng-model='dy.homeCommentNum')
          span 评论话术:
          textarea.form-control.inline-block.textarea(ng-model='dy.homeCommentAll')
          button.btn.btn-primary(ng-click='dyHomeView()') 首页养号
      label 配置自动关注:
        .flex-content
          span 操作方式(0=关注用户,1=粉丝列表,2=关注列表):
          input.form-control.sort-input(type='number', ng-model='dy.addType')
          span 每页关注数:
          input.form-control.sort-input(type='number', ng-model='dy.addNum')
          span 关注总数:
          input.form-control.sort-input(type='number', ng-model='dy.addAllNum')
          span 用户id:
          textarea.form-control.inline-block.textarea(ng-model='dy.searchId')
          button.btn.btn-primary(ng-click='dySearchAdd()') 自动关注粉丝

    uib-tab(active='activeTabs.ks', select='focusSearch()')
      uib-tab-heading
        i.fa.fa-file-video-o.fa-lg.color-red
        span 快手
      label 配置养号模式(版本号:7.2.3.13086+):
        .flex-content
          span 浏览总数:
          input.form-control.sort-input(type='number', ng-model='ks.homeViewNum')
          span 随机点赞:
          input.form-control.sort-input(type='number', ng-model='ks.homeLikeNum')
          span 随机评论:
          input.form-control.sort-input(type='number', ng-model='ks.homeCommentNum')
          span 评论话术:
          textarea.form-control.inline-block.textarea(ng-model='ks.homeCommentAll')
          button.btn.btn-primary(ng-click='ksHomeView()') 首页养号

    uib-tab(active='activeTabs.wx', select='focusSearch()')
      uib-tab-heading
        i.fa.fa-wechat.fa-lg.color-green
        span 微信
      label 配置精准加人(版本号:7.0.12+):
        .flex-content
          span 微信ID:
          textarea.form-control.inline-block.textarea(ng-model='qt.qtIdList')
          span 打招呼话术:
          textarea.form-control.inline-block.textarea(ng-model='qt.sayList')
          button.btn.btn-primary(ng-click='qtSearchAdd()') 精准加人

    uib-tab(active='activeTabs.tt', select='focusSearch()')
      uib-tab-heading
        i.fa.fa-video-camera.fa-lg.color-blue
        span tiktok
      label 配置养号模式(版本号:15.3.4):
        .flex-content
          span 浏览总数:
          input.form-control.sort-input(type='number', ng-model='tt.homeViewNum')
          span 随机点赞:
          input.form-control.sort-input(type='number', ng-model='tt.homeLikeNum')
          span 随机评论:
          input.form-control.sort-input(type='number', ng-model='tt.homeCommentNum')
          span 评论话术:
          textarea.form-control.inline-block.textarea(ng-model='tt.homeCommentAll')
          button.btn.btn-primary(ng-click='tkHomeView()') 首页养号
      label 配置精准养号模式:
        .flex-content
          span 操作方式:
            label.checkbox
              input(type='checkbox', ng-model='tt.viewVideo')
              span 浏览视频
            label.checkbox
              input(type='checkbox', ng-model='tt.likeVideo')
              span 点赞视频
            label.checkbox
              input(type='checkbox', ng-model='tt.commentVideo')
              span 评论视频
          span 用户id:
          textarea.form-control.inline-block.textarea(ng-model='tt.searchId')
          span 评论话术:
          textarea.form-control.inline-block.textarea(ng-model='tt.commentTxt')
          button.btn.btn-primary(ng-click='tkSearchView()') 精准养号

    uib-tab(active='activeTabs.ins', select='focusSearch()')
      uib-tab-heading
        i.fa.fa-instagram.fa-lg.color-blue
        span Instagram
      div
        ins-table
      //label ins养号:
      //  .flex-content
      //    button.btn.btn-primary(ng-click='startIns()') 打开Ins

    uib-tab(active='activeTabs.qq', select='focusSearch()')
